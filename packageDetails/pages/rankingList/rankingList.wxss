page {
  padding-left: 10px;
  padding-right: 10px;
}

.jing-xuan_item {
  width: 100%;
  position: relative;
}

.jing-xuan_tips {
  position: absolute;
  left: 21rpx;
  top: -2px;
  width: 51rpx;
  height: 48rpx;
}

.jing-xuan_tips>image {
  width: 100%;
  height: 100%;
}

.jing-xuan_tips>text {
  font-weight: bold;
  font-size: 29rpx;
  color: #FFFFFF;
  position: absolute;
  left: 50%;
  top: -50%;
  transform: translate(-50%, 50%);
}

.jing-xuan-img {
  width: 100%;
  height: 274rpx;
  background: #EBFDFB;
  border-radius: 21rpx 21rpx 21rpx 21rpx;
}


.jing-xuan-desc {
  width: 100%;
  font-weight: 400;
  text-align: left;
  font-style: normal;
  text-transform: none;
}

.jing-xuan-desc .desc {
  font-size: 20rpx;
  color: #000307;
  line-height: 35rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.jing-xuan-desc .num {
  font-size: 22rpx;
  color: #E60A0A;
  line-height: 31rpx;
}

.loading_tips {
  font-size: 12px;
  text-align: center;
}
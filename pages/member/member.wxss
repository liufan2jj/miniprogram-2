/* 会员信息 */
.user_warp {
  padding: 0 20px;
  background-image: linear-gradient(to bottom, #efefef, #e6e8e9, #dce2e2, #d4dbd8, #d1d3cc);
}

.user_info {
  display: flex;
  align-items: center;
  padding: 20px 0;
}

.user_info_img {
  width: 42px;
  height: 42px;
  border-radius: 50%;
  border: 1px solid rgb(31, 29, 29);
  margin-right: 6px;
}

.user_info_id {
  font-size: 14px;
}

.user_vip_warp {
  position: relative;
  height: 88px;
  border-radius: 8px 8px 0 0;
  border-bottom: none;
  box-shadow: 0px 0px 5px 2px rgba(0, 0, 0, 0.3);
}

.user_vip_info {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 8px;
}

.user_vip_tag {
  font-size: 22px;
  font-weight: bold;
  text-shadow: 0px 0px 5px rgba(0, 0, 0, 0.3);
}

.user_vip_tips {
  font-size: 12px;
  color: #e80f4b;
  font-weight: bold;
}

.user_vip_img {
  width: 68px;
  height: 68px;
  position: absolute;
  right: 0;
  top: 0;
  transform: translate(-50%, -30%);
}

.vip_warp {
  padding: 0 6px;
}

/* 会员tips */
.icon_list_warp {
  width: 100%;
  display: flex;
  align-items: center;
}

.custom-icon {
  width: 28rpx;
  height: 28rpx;
}

.icon_item_desc {
  font-size: 12px;
}

/* 充值会员月，季，年 */
.charge_item {
  width: 100%;
  text-align: center;
  line-height: 32px;
  position: relative;
  padding-top: 18px;
}

.charge_item_discount {
  position: absolute;
  top: 0;
  left: 0;
  font-size: 10px;
  background-color: #ccc;
  width: 45px;
  height: 16px;
  line-height: 16px;
  border-radius: 0 0 4px 0;
}

.charge_item_Oprice {
  font-size: 24px;
  font-weight: bold;
}

.charge_item_Dprice {
  text-decoration: line-through;
  color: #656161;
  font-size: 12px;
}

.charge_item_checked {
  position: absolute;
  right: 0;
  top: 0;
  transform: translate(25%, -25%);
  width: 28px;
  height: 28px;
  color: #e43d3d;
  font-size: 14px;
  font-weight: bold;
}

/* 开通会员特权按钮 */
.btn_warp {
  padding: 10px;
}

.btns {
  background-color: #efefef;
  text-align: center;
  line-height: 54px;
  border-radius: 32px;
}

/* 精选好剧--图片样式 */
.jing-xuan-content {
  padding: 0 6px;
}

.jing-xuan-title {
  display: flex;
  align-items: center;
}

.van-cell-img {
  width: 20px;
  height: 20px;
}

.van-cell-text {
  font-weight: bold;
  font-size: 16px;
  margin-left: 4px;
}

.jing-xuan-img {
  width: 100%;
  height: 180px;
  border-radius: 6px;
}

/* 精选好剧--描述样式 */
.jing-xuan-desc {
  width: 100%;
}

.jing-xuan-desc .desc {
  font-size: 14px;
  color: #000;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
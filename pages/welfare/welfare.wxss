page {
  padding: 0;
  margin: 0;
}

.totalNum {
  padding: 8px;
}

.total_text {
  color: rgb(236, 135, 67);
}

.container-warp {
  border: 1px solid #ccc;
  border-radius: 8px 8px 0 0;
  line-height: 32px;
  padding: 8px;
}

/* 累积签单天数 */
.thead {
  display: flex;
  justify-content: space-between;
}

.mm {
  font-size: 16px;
  font-family: fantasy;
}

.pp {
  font-size: 12px;
}

/* 天数列表样式 */
.head-dd {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 32px;
}

.head_info {
  text-align: center;
}

.head_title {
  font-size: 26rpx;
  line-height: 28rpx;
  color: #333333;
}

/* 签到图标和金币样式 */
.head-iconWarp {
  display: flex;
  justify-content: space-around;
  padding: 8px 0;
  height: 56px;
}

.icon_warp {
  position: relative;
  display: flex;
  align-items: center;
}

.head_icon {
  width: 60rpx;
  height: 60rpx;
  z-index: 1;
}

.head_line {
  position: absolute;
  top: 50%;
  left: -35%;
  transform: translate(-50%, -50%);
  height: 2rpx;
}

/* 签到按钮样式 */
.the-btn {
  padding: 20px;
}

.btn {
  height: 36px;
  line-height: 36px;
  background: rgb(236, 135, 67);
  border-radius: 16px;
  text-align: center;
  color: #fff;
  width: 94px;
}

/* 活动面板样式 */
.todo_item {
  display: flex;
  justify-content: space-between;
  line-height: 32px;
}

.todo_item_warp{
  display: flex;
  align-items: center;
}

.todes_title{
  margin-left: 4px;
  font-size: 16px;
}


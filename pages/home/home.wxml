<!--pages/home.wxml-->
<view>
  <scroll-view scroll-x="true" class="tab-h" scroll-left="{{scrollLeft}}">
    <view wx:for="{{albumList}}" wx:key="index" class="tab-item {{currentTab==index?'active':''}}" data-current="{{index}}" data-id="{{item.id}}" bindtap="swichNav">{{item.material_name}}</view>
  </scroll-view>
  <swiper class="tab-content" current="{{currentTab}}" duration="300" bindchange="switchTab" style="height:{{winHeight}}rpx">
    <swiper-item wx:for="{{albumList}}" wx:key="index" data-curId="{{item.id}}">
      <scroll-view scroll-y="true" class="scoll-h" bindscrolltoupper="upper" bindscrolltolower="lower">
        <block wx:for="{{expertData}}" wx:key="index">
          <view class="item-ans">
            <view class="avatar">
              <image class="img" src="{{item.img}}"></image>
            </view>
            <view class="expertInfo">
              <view class="name">{{item.material_name}}</view>
              <view class="tag">{{item.updated_time}}</view>
              <view class="answerHistory">134个回答，2234人听过 </view>
            </view>
            <navigator url="/pages/index/index" open-type="switchTab" class="askBtn">问TA</navigator>
          </view>
        </block>
      </scroll-view>
    </swiper-item>
  </swiper>
</view>
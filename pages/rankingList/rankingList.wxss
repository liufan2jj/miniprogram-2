page {
  padding-left: 10px;
  padding-right: 10px;
}

.jing-xuan_item {
  width: 100%;
  position: relative;
}

.jing-xuan_tips {
  position: absolute;
  left: 0;
  top: -4px;
  background-image: linear-gradient(212deg, #cccccc 50%, rgba(255, 255, 255, 0) 50%), linear-gradient(148deg, #cccccc 50%, rgba(255, 255, 255, 0) 50%);
  width: 28px;
  height: 61px;
  text-align: center;
}

.jing-xuan-img {
  width: 100%;
  height: 180px;
  border-radius: 6px;
}


.jing-xuan-desc {
  width: 100%;
}

.jing-xuan-desc .desc {
  font-size: 14px;
  color: #000;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
page {
  padding-left: 10px;
  padding-right: 10px;
}

/* 搜索栏样式 */
.van-search {
  padding: 0 !important;
}

.van-search__content {
  border: 1px solid #82dec0;
  border-radius: 17px !important;
  background: #fff !important;
}

/* 搜索列表样式 */
.jing-xuan_item {
  width: 100%;
  position: relative;
}

.jing-xuan_tips {
  position: absolute;
  left: 0;
  top: -4px;
  background-image: linear-gradient(212deg, #cccccc 50%, rgba(255, 255, 255, 0) 50%), linear-gradient(148deg, #cccccc 50%, rgba(255, 255, 255, 0) 50%);
  width: 28px;
  height: 61px;
  text-align: center;
}

.jing-xuan-title {
  display: flex;
  align-items: center;
}

.van-cell-img {
  width: 20px;
  height: 20px;
}

.van-cell-text {
  font-weight: bold;
  font-size: 16px;
}

.jing-xuan-img {
  width: 100%;
  height: 180px;
  border-radius: 6px;
}


.jing-xuan-desc {
  width: 100%;
}

.jing-xuan-desc .desc {
  font-size: 14px;
  color: #000;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}